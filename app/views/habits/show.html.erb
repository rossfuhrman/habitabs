<p>
<strong>Title:</strong>
<%= @habit.title %>
</p>

<p>
<strong>Polarity:</strong>
<%= @habit.polarity_class.capitalize %>
</p>

<p>
<strong>Description:</strong>
<%= @habit.description %>
</p>

<%= link_to 'Edit', edit_habit_path(@habit), class: "button round" %> 
<%= link_to 'Delete', @habit, method: :delete, data: { confirm: 'Are you sure you want to delete this habit and all the data associated with it?'}, class: "button round" %>

<br />
<br />

<%= link_to "< Previous", date: @date.prev_month %>
| <%= @date.strftime("%B %Y") %> | 
<%= link_to " Next >", date: @date.next_month %>

<br />
<br />

<div id="habits">
  <%= calendar @date do |date| %>
    <%= date.day %>
    <% if @marks_by_date[date] %>
      <ul class="<%=@habit.polarity_class %>" >
        <li>
          <%= @marks_by_date[date].count %>
        </li>
      </ul>
    <% end %>
  <% end %>
</div>

<p>
<%= link_to 'Dashboard', habits_path, class: "button round" %>  
<%= link_to 'Add a Habit', new_habit_path, class: "button round" %>
</p>
